<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/x_axis_title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter X-axis title"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/y_axis_title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Y-axis title"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/x_values_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter X values (comma-separated)"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/y_values_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Y values (comma-separated)"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/color_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Colors (comma-separated)"
        android:inputType="text"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/draw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw Heatmap"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/heatmap_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">
    </LinearLayout>

</LinearLayout>
